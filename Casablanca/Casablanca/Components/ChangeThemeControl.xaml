<UserControl x:Class="Casablanca.Components.ChangeThemeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="ThemeSelector">
    <Grid>
        <ComboBox x:Name="ThemeComboBox" HorizontalAlignment="Right" VerticalAlignment="Center" Width="55" SelectionChanged="ThemeComboBox_SelectionChanged" SelectedIndex="0" Background="Gray">
           
            <ComboBoxItem Tag="li">
                <StackPanel Orientation="Horizontal">
                    <Image Source="pack://application:,,,/Casablanca;component/Images/light.png"/>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="dk">
                <StackPanel Orientation="Horizontal">
                    <Image Source="pack://application:,,,/Casablanca;component/Images/dark.png"/>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem Tag="co">
                <StackPanel Orientation="Horizontal">
                    <Image Source="pack://application:,,,/Casablanca;component/Images/colorful.png"/>
                </StackPanel>
            </ComboBoxItem>
        </ComboBox>
    </Grid>

</UserControl>
